                                            {#{% endif %}#}
                                        {#{% else %}#}
                                            {#{% if i==1 %}#}
                                                {#<label class="radio-inline"><input name="duration" id="duration" type="radio" checked="checked" value="{{ (i*30) }}" />{{ (i*30) }} мин</label>#}
                                            {#{% else %}#}
                                                {#<label class="radio-inline"><input name="duration" id="duration" type="radio" value="{{ (i*30) }}" />{{ (i*30) }} мин</label>#}
                                            {#{% endif %}#}
                                        {#{% endif %}#}

                                    {#{% endfor %}#}
                                    {#</div>#}
                            </div>
                        </div>
                    </div>


                    {#<div class="form-group">#}
                        {#<label for="selectDoctorId" class="col-sm-3 control-label">Сотрудник:</label>#}

                        {#<div class="col-sm-9">#}
                            {#<div class="input-group">#}
                                {#<div class="input-group-addon">#}
                                    {#<i class="fa fa-user-md icon20"></i>#}
                                {#</div>#}
                                {#<select class="form-control" id="doctorId">#}
                                    {#{% for doctor in doctors %}#}
                                        {#{% if doctor.id == doctorId|default(0) %}#}
                                            {#<option selected value="{{ doctor.id }}">{{ doctor.name }}</option>#}
                                        {#{% else %}#}
                                            {#<option value="{{ doctor.id }}">{{ doctor.name }}</option>#}
                                        {#{% endif %}#}
                                    {#{% endfor %}#}
                                {#</select>#}
                            {#</div>#}

                        {#</div>#}
                    {#</div>#}



                    <div class="form-group">
                        <label for="textareaDescription" class="col-sm-3 control-label">Заметка:</label>

                        <div class="col-sm-9">
                            <textarea class="form-control" rows="3" id="description">{{ description|default('') }}</textarea>
                        </div>
                    </div>
                    <input type="hidden" id="date"     value="{{ date|default('') }}">
                    <input type="hidden" id="appId"    value="{{ appId|default('') }}">
                    <input type="hidden" id="clientId" value="{{ client.id|default('') }}">
                    <input type="hidden" id="officeId" value="{{ office.id }}">
                    <input type="hidden" id="doctorId" value="{{ doctor.id }}">
                    <input type="hidden" id="time"     value="{{ time }}">
                    <input type="hidden" id="date"     value="{{ date }}">

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                <button type="button" class="btn btn-primary" id="saveButton">Сохранить</button>
            </div>
        </div>
    </div>
<script>
    $(document).ready(function() {
        var form = BackOffice.AppForm;
        form.createUrl = "{{ url('api_app_create')   }}";
        form.updateUrl = "{{ url('api_app_update')   }}";
        form.clientUrl = "{{ url('api_client_find')   }}";
        form.pattern   = "{{ country.pattern }}";
        form.length    = {{ country.length }};
        form.prefix    = "{{ country.prefix }}";
        form.init({{ appId|default('false') }});
    });
</script>
