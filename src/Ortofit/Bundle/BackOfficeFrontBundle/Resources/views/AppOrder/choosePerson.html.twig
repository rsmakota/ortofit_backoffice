<!-- Modal -->

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                        aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Услуги оказываются:</h4>
        </div>
        <div class="modal-body" style="text-align: center">
            {% include "@OrtofitBackOfficeFront/AppOrder/panel.html.twig" %}
            <table class="table table-striped">
                <tr>
                    <td>Самому клиенту</td>
                    <td><i class="fa fa-credit-card"></i></td>
                    <td>{{ app.client.name }}</td>
                    <td><button type="button" class="btn btn-success" id="clientButton"> <i class="fa  fa-arrow-right"></i> </button></td>
                </tr>
                {% for person in app.client.persons %}
                    {% if person.isClient == false %}
                <tr>
                    <td>{{ person.familyStatus.name }}</td>
                    <td>
                        <i class="fa fa-users"></i>
                    </td>

                        <td>{{ person.name }}</td>

                        <td><button type="button" class="btn btn-success personButton" personId="{{ person.id }}"> <i class="fa fa-arrow-right"></i> </button></td>

                </tr>
                    {% endif %}
                {% endfor %}
                <tr>
                    <td>Новому члену семьи</td>
                    <td><i class="fa fa-user-plus"></i></td>
                    <td>Когда нет в списке выше</td>
                    <td>
                        <button type="button" class="btn btn-success" id="newPersonButton"><i class="fa fa-user-plus"></i></button>
                    </td>
                </tr>

            </table>
        </div>
        <div class="modal-footer">

        </div>
    </div>
</div>
<script>
    $(document).ready(function() {
        var control = BackOffice.OrderChoosePerson;
        control.postUrl = "{{ url('bf_app_order_process') }}";
        control.appId   = {{ app.id }};
        control.init();


    });
</script>