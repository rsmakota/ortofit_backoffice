
{% extends 'OrtofitBackOfficeFrontBundle:Layout:layout.html.twig' %}
{% block style %}
    {{ parent() }}
    {#<link href="{{ '../bundles/ortofitbackofficefront/plugins/morris/morris.css' }}" rel="stylesheet" type="text/css" />#}
{% endblock %}
{% block js %}
    {{ parent() }}
    {% javascripts
    '@OrtofitBackOfficeFrontBundle/Resources/public/plugins/datepicker/bootstrap-datepicker.js'
    %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('.iDate').datepicker({
                autoclose: true,
                todayHighlight: true
            });
        });
    </script>
    {% endjavascripts %}
{% endblock %}
{% block body %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Итоги
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ url('bf_report_index') }}"><i class="fa fa-book"></i>Итоги</a></li>
        </ol>
    </section>
    <!-- content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <form class="form-inline">
                            <div class="form-group">
                                <label class="control-label" for="inputDateFrom">C:</label>
                                <input type="date" class="form-control iDate" id="dateFrom">
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="inputDateTo">По:</label>
                                <input type="date" class="form-control iDate" id="dateTo">
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="inputOffice">Офис:</label>
                                <select class="form-control" id="officeId">
                                    <option value="0">Все</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="inputDoctor">Сотрудник:</label>
                                <select class="form-control" id="doctorId">
                                    <option value="0">Все</option>
                                </select>
                            </div>
                            <button type="button" class="btn btn-primary" id="saveButton">Итог</button>

                        </form>
                    </div>

                </div>
            </div>


        </div>
    </section>
{% endblock %}