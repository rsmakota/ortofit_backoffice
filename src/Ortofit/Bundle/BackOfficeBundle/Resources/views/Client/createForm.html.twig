<!-- Modal -->

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                        aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Новый клиент</h4>
        </div>
        <div class="modal-body">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="inputMsisdn" class="col-sm-2 control-label">Телефон:</label>

                    <div class="col-sm-10">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-phone"></i>
                            </div>
                            <input type="text" class="form-control" id="msisdn" data-mask=""
                                   data-inputmask="'mask': '(99) 999-999-99-99'" placeholder="(38) 067-359-42-88"
                                   value="{{ msisdn|default('') }}"/>
                        </div>

                    </div>
                </div>
                <div class="form-group">
                    <label for="inputName" class="col-sm-2 control-label">Имя:</label>

                    <div class="col-sm-10">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-user"></i>
                            </div>
                            <input type="text" class="form-control" id="name"
                                   placeholder="Имя Клиента" value="{{ name|default('') }}"/>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="selectGender" class="col-sm-2 control-label">Пол:</label>

                    <div class="col-sm-10">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-venus-mars"></i>
                            </div>
                            <select class="form-control" id="gender">
                                {% if "female" == gender|default(0) %}
                                    <option selected value="female">Женский</option>
                                    <option value="male">Мужской</option>
                                {% else %}
                                    <option value="female">Женский</option>
                                    <option selected value="male">Мужской</option>
                                {% endif %}
                            </select>
                        </div>

                    </div>
                </div>

                <div class="form-group">
                    <label for="selectDirectionId" class="col-sm-2 control-label">Источник:</label>

                    <div class="col-sm-10">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-arrow-right"></i>
                            </div>
                            <select class="form-control" id="clientDirectionId">
                                {% for direction in directions %}
                                    {% if direction.id == directionId|default(0) %}
                                        <option selected value="{{ direction.id }}">{{ direction.name }}</option>
                                    {% else %}
                                        <option value="{{ direction.id }}">{{ direction.name }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>

                    </div>
                </div>
                <input type="hidden" id="id" value="{{ id|default('') }}">

            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
            <button type="button" class="btn btn-primary" id="saveButton">Сохранить</button>
        </div>
    </div>
</div>
<script>
    $(document).ready(function() {
        jQuery.client.createUrl = '{{ url('backendoffice_clients_create') }}';
        jQuery.client.updateUrl = '{{ url('backendoffice_clients_update') }}';
        jQuery.client.init({{ id|default('false') }});
    });
</script>
